            %h3 Model Details:
            //%p= "Training Dataset:\t#{model[RDF::OT.trainingDataset]}"
            %p{:style=>"display:inline;"} Algorithm:
            %code{:style=>"font-size:x-large;"} lazar
            %p Type: classification
            %p Training compounds: 86
