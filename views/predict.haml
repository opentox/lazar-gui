            //%p= "Feature Dataset:\t#{model[RDF::OT.featureDataset]}"
            /%h3 Validation: 
            -#%a{:href => "#"} 
              Detailed report link
            /%p Number of predictions: integer
            /%p Correct predictions: %
        - when /hamster/i
