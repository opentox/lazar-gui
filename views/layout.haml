        $(document).ready(function(){
          // hide #back-top first
          $("#back-top").hide();
          // fade in #back-top
          $(function () {
            $(window).scroll(function () {
              if ($(this).scrollTop() > 400) {
                $('#back-top').fadeIn();
              } else {
                $('#back-top').fadeOut();
              }
            });
            // scroll body to 0px on click
            $('#back-top a').click(function () {
              $('body,html').animate({
                scrollTop: 0
              }, 500);
              return false;
            });
          });
          $('a#confidence').tooltip({
            predelay: 300,
            position: 'bottom center',
            offset: [-100, 0],
          });
